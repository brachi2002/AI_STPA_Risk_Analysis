{
  "name": "stpa-agent",
  "displayName": "STPA Agent",
  "description": "AI STPA risk analysis helper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:stpa-agent.chat",
    "onCommand:stpa-agent.analyzeCurrentFile",
    "onCommand:stpa-agent.analyzeSelection",
    "onCommand:stpa-agent.refineAnalysis",
    "onCommand:stpa-agent.previewDiagrams",
    "onCommand:stpa-agent.smartEdit",
    "onCommand:stpa-agent.smartEdit.applyPlan",
    "onCommand:stpa-agent.smartEdit.discardPlan",
    "onCommand:stpa-agent.guided"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stpaAgent",
          "title": "STPA Agent",
          "icon": "media/analyze.svg"
        }
      ]
    },
    "views": {
      "stpaAgent": [
        {
          "id": "stpa-agent.chat",
          "name": "STPA Agent",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "STPA Agent",
      "properties": {
        "stpaAgent.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o-mini",
            "gpt-4o",
            "gpt-4.1-mini",
            "gpt-4.1"
          ],
          "description": "Selected model for the chat UI (not yet used for API calls)."
        }
      }
    },
    "commands": [
      {
        "command": "stpa-agent.guided",
        "title": "STPA Agent: Guided STPA (Steps 1â€“4)",
        "category": "STPA Agent"
      },
      {
        "command": "stpa-agent.analyzeCurrentFile",
        "title": "STPA Agent: Analyze File",
        "icon": {
          "light": "media/analyze.svg",
          "dark": "media/analyze.svg"
        }
      },
      {
        "command": "stpa-agent.analyzeSelection",
        "title": "STPA Agent: Analyze Selection",
        "icon": {
          "light": "media/selection.svg",
          "dark": "media/selection.svg"
        }
      },
      {
        "command": "stpa-agent.refineAnalysis",
        "title": "STPA Agent: Refine Analysis",
        "icon": {
          "light": "media/refine.svg",
          "dark": "media/refine.svg"
        }
      },
      {
        "command": "stpa-agent.previewDiagrams",
        "title": "STPA Agent: Preview Diagrams",
        "icon": {
          "light": "media/diagram.svg",
          "dark": "media/diagram.svg"
        }
      },
      {
        "command": "stpa-agent.smartEdit",
        "title": "STPA Agent: Smart Edit from Chat",
        "icon": {
          "light": "media/clear.svg",
          "dark": "media/clear.svg"
        }
      },
      {
        "command": "stpa-agent.smartEdit.applyPlan",
        "title": "STPA Agent: Apply Suggested Fixes",
        "category": "STPA Agent"
      },
      {
        "command": "stpa-agent.smartEdit.discardPlan",
        "title": "STPA Agent: Discard Suggested Fixes",
        "category": "STPA Agent"
      }
    ],
    "keybindings": [
      {
        "command": "stpa-agent.analyzeCurrentFile",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "stpa-agent.analyzeSelection",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "tsc -p tsconfig.e2e.json && vscode-test --config .vscode-test.mjs",
    "test:update-snapshots": "jest -u"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@types/jsdom": "^27.0.0",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "jsdom": "^23.1.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "openai": "^5.23.0"
  }
}
