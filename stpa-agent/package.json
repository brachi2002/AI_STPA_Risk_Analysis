{
  "name": "stpa-agent",
  "displayName": "STPA Agent",
  "description": "AI STPA risk analysis helper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:stpa-agent.chat",
    "onCommand:stpa-agent.analyzeCurrentFile",
    "onCommand:stpa-agent.analyzeSelection",
    "onCommand:stpa-agent.refineAnalysis",
    "onCommand:stpa-agent.exportMarkdown",
    "onCommand:stpa-agent.previewDiagrams",
    "onCommand:stpa-agent.smartEdit"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stpaAgent",
          "title": "STPA Agent",
          "icon": "media/analyze.svg"
        }
      ]
    },
    "views": {
      "stpaAgent": [
        {
          "id": "stpa-agent.chat",
          "name": "STPA Agent",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "stpa-agent.analyzeCurrentFile",
        "title": "STPA Agent: Analyze File",
        "icon": {
          "light": "media/analyze.svg",
          "dark": "media/analyze.svg"
        }
      },
      {
        "command": "stpa-agent.analyzeSelection",
        "title": "STPA Agent: Analyze Selection",
        "icon": {
          "light": "media/selection.svg",
          "dark": "media/selection.svg"
        }
      },
      {
        "command": "stpa-agent.refineAnalysis",
        "title": "STPA Agent: Refine Analysis",
        "icon": {
          "light": "media/refine.svg",
          "dark": "media/refine.svg"
        }
      },
      {
        "command": "stpa-agent.exportMarkdown",
        "title": "STPA Agent: Export Markdown Report",
        "icon": {
          "light": "media/export.svg",
          "dark": "media/export.svg"
        }
      },
      {
        "command": "stpa-agent.previewDiagrams",
        "title": "STPA Agent: Preview Diagrams",
        "icon": {
          "light": "media/diagram.svg",
          "dark": "media/diagram.svg"
        }
      },
      {
        "command": "stpa-agent.smartEdit",
        "title": "STPA Agent: Smart Edit from Chat",
        "icon": {
          "light": "media/clear.svg",
          "dark": "media/clear.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "stpa-agent.analyzeCurrentFile",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "stpa-agent.analyzeSelection",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "openai": "^5.23.0"
  }
}